<h2>Register New Client</h2>
<div class="row">
  <div class="col-md-9">
    <% unless @error.nil? %>
      <div class="alert alert-danger" role="alert">
        <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        <%= @error %>
      </div>
    <% end %>

    <form action="/sources/form" method="post">
      <div class="form-group">
        <label for="identifier">Client Name</label>
        <input type="identifier" class="form-control" id="identifier" name="identifier" placeholder="Name">
      </div>
      <div class="form-group">
        <label for="rootUrl">Root URL</label>
        <input type="rootUrl" class="form-control" id="rootUrl" name="rootUrl" placeholder="URL">
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
</div>
